<div style="margin-top: 10px" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <%for(var i = 0 ; i < data.length ; i++) { %>
    <div class="col">
      <div class="card shadow-sm">
        <img style="padding: 20px" width="250px" height="250px" src="<%= data[i].Anh%>">
        <div class="card-body">
          <p class="card-text"> <%= data[i].noiDung %>  </p>
          <p class="card-text"> <%= data[i].ngayThang %>  </p>
          <p class="card-text"> <%= data[i].linkAnh %>  </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <form method="post" action="/Delete" enctype="application/x-www-form-urlencoded">
                <button type="submit" class="btn btn-sm btn-outline-secondary">Xóa</button>
                <input type="hidden" name="id" value="<%= data[i]._id%>">
              </form>
                <button style="margin-left: 30px" type="submit" class="btn btn-sm btn-outline-secondary"><a href="/Update">Sửa</a></button>
            </div>
            <small class="text-muted">9 mins</small>
          </div>
        </div>
      </div>
    </div>
  <% } %>

